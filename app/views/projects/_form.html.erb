<%= form_for @project do |f| %>
 
  <% if @project.errors.any? %>
    <div id="error_explanation" class="alert alert-success" role="alert">
      <h2>
       保存项目时产生了<%= pluralize(@project.errors.count, "个错误:") %>
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :项目名称 %> *<br>
    <%= f.text_field :title, :style => "width:450px;" %> <span id="helpBlock2" class="help-block" >当前0字/最多100字 *</span>
  </p>

   <p>
  <%= f.label :计划起止时间%> *<br> 

   <%= f.date_select :ScheduledStartDate, :order => [:year,:month,:day] ,:class => 'datepicker'  %> <%= f.label :至%> <%= f.date_select :ScheduledFinishDate, :order => [:year,:month,:day] %> 

   </p>

 
  <div class="form-inline">
  <div class="input-group input-group-sm">
   <p>
    <%= f.label :项目类型 %> *<br>
    <%= f.select(:project_type, ['维护项目','新项目','组内任务'],{ :prompt => "请选择"},{:class => "form-control",:style => "width:225px;"}) %>
     </p>
     </div>
     <div class="input-group input-group-sm">
 <p>
    <%= f.label :所属系统%> *<br>
    <%= f.select(:system, ['业务系统','产品报价系统（PRC）','供应商管理系统（SRM）','调度系统（TMS）','财务结算系统','收款易（Skyee）','报表系统(RPT)'],{ :prompt => "请选择"},{:class => "form-control",:style => "width:225px;"}) %>
  </p>
  </div>
</div>
  <div class="form-inline">
    <div class="form-group">
   <p>
    <%= f.label :项目负责人%> *<br> 
    <%= f.select :DevelopBy, options_for_select(["张子锴", "黄晓玲", "左蓉", "陈慧文"]), {}, {:multiple => true, :class => "form-control", :style => "width:225px;" } %>
  </p>
  </div>
      <div class="form-group">
  <p>
    <%= f.label :测试负责人%> *<br> 
    <%= f.select :TestBy, options_for_select(["林劼", "黄晓玲", "左蓉", "陈慧文"]), {}, {:multiple => true, :class => "form-control", :style => "width:225px;" } %>
  </p>
    </div>
    </div>
 

  <p>
    <%= f.label :备注 %><br>
    <%= f.text_area :remark, :style => "width:450px;" %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>