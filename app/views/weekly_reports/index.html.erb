<div class = "container">
<ol class="breadcrumb">
      <li><a href="#">周报管理系统</a></li>
      <li class="active">个人工作周报列表</li>      
  </ol>
<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>年份</th>
      
      <th>工作周</th>

      <th>项目名称</th>

      <th>项目进度%</th>

      <th>备注</th>

      <th>报告人</th>

      <th>创建于</th>

      <th>修改于</th>

      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @weekly_reports.each do |weekly_report| %>
      <tr>
        <td><%= weekly_report.year %></td>

        <td><%= weekly_report.week %></td>

        <td><%= weekly_report.project.title %></td>

        <td><%= weekly_report.progress %></td>

        <td><%= weekly_report.remark %></td>
        
        <td><%= weekly_report.reporter %></td>
        
        <td><%= weekly_report.created_at %></td>
        
        <td><%= weekly_report.updated_at %></td>
        
        <td><%= link_to 'Show', weekly_report %></td>
        <td><%= link_to 'Edit', edit_weekly_report_path(weekly_report) %></td>
        <td><%= link_to 'Destroy', weekly_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weekly Report', new_weekly_report_path %>

</div>
